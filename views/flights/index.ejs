<%- include('../partials/header') %> 

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>Airline</th>
            <th>Airport</th>
            <th>Flight Number</th>
            <th>Departure</th>
            <th>Details</th>
        </tr>
    </thead>
    <tbody>
        <% flights.forEach(f => { %>
            <tr>
                <td><%= f.airline %></td>
                <td><%= f.airport %></td>
                <td><%= f.flightNo %></td>
                <td><%= f.departs %></td>
                <td><a href="/flights/<%= f._id %>" class="btn btn-primary">DETAILS</a></td>
            </tr>
        <% }) %> 
    </tbody>
</table>

<%- include('../partials/footer') %> 