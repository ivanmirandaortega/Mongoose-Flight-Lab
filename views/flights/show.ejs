<%- include('../partials/header') %> 

<section class="section-body">
    <table class="table table-striped table-hover">
        <thead>
            <th>Airline:</th>
            <th>Airport:</th>
            <th>Flight Number:</th>
            <th>Departure:</th>
        </thead>
        <tbody>
            <tr>
                <td><%= flight.airline %> </td>
                <td><%= flight.airport %> </td>
                <td><%= flight.flightNo %> </td>
                <td><%= flight.departs %> </td>
            </tr>
        </tbody>
    </table>
</section>
<section class="section-body">
    <br><br><h2>Destinations</h2>
    <form method="POST" action="/flights/<%= flight._id %>/destinations">
        <label>Airport:</label>
        <select name="airport">
            <option value="ATL">ATL</option>
            <option value="DFW">DFW</option>
            <option value="DEN">DEN</option>
            <option value="LAX">LAX</option>
            <option value="SAN">SAN</option>
        </select>
        <label>Arrival:
            <input type="datetime-local" name="arrival">
        </label>
        <input type="submit" value="Add Destination" class="btn btn-primary">
    </form>
    <% if (flight.destinations.length) %>
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Date</th>
                <th>Airport</th>
                <th>Arrival</th>
            </tr>
        </thead>
        <tbody>
            <% flight.destinations.forEach(d => { %>
                <tr>
                    <td><%= d.createdAt.toLocaleDateString() %> </td>
                    <td><%= d.airport %> </td>
                    <td><%= d.arrival %> </td>
                </tr>
            <% }) %> 
        </tbody>
    </table> 
</section>

<section class="section-body">
    <h2>Tickets</h2>
    <table class="table table-striped table-hover">
        <thead>
            <th>Seat</th>
            <th>Price</th>
        </thead>
        <tbody>
            <% tickets.forEach(t => { %>
            <tr>
                <td><%= t.seat %> </td>
                <td><%= t.price %> </td>
            </tr>
            <% }) %>
        </tbody>
    </table>
    
    <a href="/flights/<%= flight._id %>/tickets/new" class="btn btn-primary">Add Tickets</a>
    
</section>

<%- include('../partials/footer') %> 